{
  "name": "3-ball-network",
  "version": "2.0.0",
  "description": "Advanced basketball community platform connecting players, coaches, scouts, and fans",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css",
    "build:js": "echo 'JavaScript build skipped - using individual modules'",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "node server.js",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "watch:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css --watch",
    "serve": "http-server public -p 3000 -o",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint public/assets/js/**/*.js",
    "lint:fix": "eslint public/assets/js/**/*.js --fix",
    "format": "prettier --write \"public/assets/js/**/*.js\" \"*.js\" \"*.json\"",
    "format:check": "prettier --check \"public/assets/js/**/*.js\" \"*.js\" \"*.json\"",
    "format:all": "npm run lint:fix && npm run format",
    "analyze": "webpack-bundle-analyzer public/assets/js/bundle.js",
    "pwa:generate": "workbox generateSW workbox-config.js",
    "security:audit": "npm audit && snyk test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3ballnetwork/3-ball-network.git"
  },
  "keywords": [
    "basketball",
    "sports",
    "community",
    "scouting",
    "analytics",
    "pwa",
    "real-time",
    "firebase",
    "charts",
    "dashboard"
  ],
  "author": "3 Ball Network Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.5",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "snyk": "^1.1267.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
