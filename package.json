{
  "name": "3-ball-network",
  "version": "2.0.0",
  "description": "Advanced basketball community platform connecting players, coaches, scouts, and fans",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "./deploy.js build",
    "build:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css",
    "build:js": "echo 'JavaScript build skipped - using individual modules'",
    "build:hash": "node scripts/build-with-hash.js",
    "build:clean": "./deploy.js clean",
    "build:vite": "vite build",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node server.js",
    "dev": "./deploy.js dev",
    "dev:legacy": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "dev:vite": "vite",
    "dev:hmr": "./deploy.js dev",
    "watch:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css --watch",
    "serve": "http-server public -p 3000 -o",
    "preview": "vite preview",
    "deploy": "./deploy.js full",
    "deploy:dev": "./deploy.js dev",
    "deploy:build": "./deploy.js build",
    "deploy:firebase": "./deploy.js firebase",
    "deploy:full": "./deploy.js full",
    "deploy:clean": "./deploy.js clean",
    "deploy:verify": "./deploy.js verify",
    "deploy:vite": "npm run build:vite && firebase deploy",
    "lint": "eslint public/assets/js/**/*.js tests/**/*.js scripts/**/*.js",
    "lint:fix": "eslint public/assets/js/**/*.js tests/**/*.js scripts/**/*.js --fix",
    "format": "prettier --write \"public/assets/js/**/*.js\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.js\" \"*.json\"",
    "format:check": "prettier --check \"public/assets/js/**/*.js\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.js\" \"*.json\"",
    "format:all": "npm run lint:fix && npm run format",
    "analyze": "webpack-bundle-analyzer public/assets/js/bundle.js",
    "pwa:generate": "workbox generateSW workbox-config.js",
    "security:audit": "npm audit && snyk test",
    "quality:check": "npm run lint && npm run format:check && npm run test:coverage",
    "ci": "npm run quality:check && npm run test:e2e && npm run test:a11y",
    "optimize": "node scripts/optimize-website.js",
    "enhance:performance": "node scripts/enhance-performance.js",
    "enhance:ux": "node scripts/enhance-ux.js",
    "server:optimize": "node scripts/server-optimization.js",
    "quality:assurance": "node scripts/quality-assurance.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3ballnetwork/3-ball-network.git"
  },
  "keywords": [
    "basketball",
    "sports",
    "community",
    "scouting",
    "analytics",
    "pwa",
    "real-time",
    "firebase",
    "charts",
    "dashboard",
    "file-hashing",
    "cache-busting"
  ],
  "author": "3 Ball Network Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/config-array": "^0.21.0",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-legacy": "^7.0.0",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.10.3",
    "babel-jest": "^29.7.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "chrome-launcher": "^1.2.0",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.7.1",
    "lighthousebot": "^1.0.0",
    "livereload": "^0.9.3",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.1",
    "webpack-bundle-analyzer": "^4.10.1",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
