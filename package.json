{
  "name": "3-ball-network",
  "version": "2.0.0",
  "description": "Advanced basketball community platform connecting players, coaches, scouts, and fans",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "./deploy.js build",
    "build:dev": "vite build --mode development",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "build:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css",
    "build:js": "echo 'JavaScript build skipped - using individual modules'",
    "build:hash": "node scripts/build-with-hash.js",
    "build:clean": "./deploy.js clean",
    "build:vite": "vite build",
    "test": "./run-tests.sh",
    "test:unit": "./run-tests.sh --unit-only",
    "test:integration": "./run-tests.sh --integration-only",
    "test:e2e": "./run-tests.sh --e2e-only",
    "test:security": "./run-tests.sh --security-only",
    "test:accessibility": "./run-tests.sh --accessibility-only",
    "test:a11y": "./run-tests.sh --accessibility-only",
    "test:performance": "./run-tests.sh --performance-only",
    "test:ai": "./run-tests.sh --ai-only",
    "test:chaos": "./run-tests.sh --chaos",
    "test:coverage": "jest --config=tests/config/jest.config.cjs --coverage",
    "test:watch": "jest --config=tests/config/jest.config.cjs --watch",
    "test:all": "./run-tests.sh",
    "test:quick": "./run-tests.sh --no-performance --no-chaos",
    "test:critical": "./run-tests.sh --unit-only --integration-only --security-only",
    "test:cypress": "cypress run --config-file tests/config/cypress.config.cjs",
    "test:cypress:open": "cypress open --config-file tests/config/cypress.config.cjs",
    "test:jest": "jest --config=tests/config/jest.config.cjs",
    "test:lighthouse": "lhci autorun --config=tests/config/lighthouse.config.js",
    "test:visual": "cypress run --config-file tests/config/cypress.config.cjs --spec 'tests/__tests__/visual/**/*.cy.js'",
    "test:regression": "cypress run --config-file tests/config/cypress.config.cjs --spec 'tests/__tests__/e2e/regression/**/*.cy.js'",
    "test:mobile": "cypress run --config-file tests/config/cypress.config.cjs --config viewportWidth=375,viewportHeight=667",
    "test:cross-browser": "cypress run --config-file tests/config/cypress.config.cjs --browser chrome && cypress run --browser firefox",
    "test:report": "node scripts/test-report-generator.js && open test-results-dashboard.html",
    "test:dashboard": "node scripts/test-report-generator.js && open test-results-dashboard.html",
    "start": "node server.js",
    "dev": "vite --mode development",
    "dev:legacy": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "dev:vite": "vite",
    "dev:hmr": "./deploy.js dev",
    "dev:staging": "vite --mode staging",
    "watch:css": "postcss public/assets/css/style.css -o public/assets/css/style.min.css --watch",
    "serve": "http-server public -p 3000 -o",
    "preview": "vite preview",
    "deploy": "./deploy.js full",
    "deploy:dev": "./deploy.js dev",
    "deploy:build": "./deploy.js build",
    "deploy:firebase": "./deploy.js firebase",
    "deploy:full": "./deploy.js full",
    "deploy:clean": "./deploy.js clean",
    "deploy:verify": "./deploy.js verify",
    "deploy:vite": "npm run build:vite && firebase deploy",
    "lint": "eslint public/assets/js/**/*.js tests/**/*.js scripts/**/*.js",
    "lint:fix": "eslint public/assets/js/**/*.js tests/**/*.js scripts/**/*.js --fix",
    "format": "prettier --write \"public/assets/js/**/*.js\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.js\" \"*.json\"",
    "format:check": "prettier --check \"public/assets/js/**/*.js\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.js\" \"*.json\"",
    "format:all": "npm run lint:fix && npm run format",
    "analyze": "webpack-bundle-analyzer public/assets/js/bundle.js",
    "pwa:generate": "workbox generateSW workbox-config.js",
    "security:audit": "npm audit --audit-level high || echo 'Security audit completed with warnings'",
    "quality:check": "npm run lint && npm run format:check && npm run test:coverage",
    "ci": "npm run quality:check && npm run test:e2e && npm run test:a11y",
    "optimize": "node scripts/optimize-website.js",
    "enhance:performance": "node scripts/enhance-performance.js",
    "enhance:ux": "node scripts/enhance-ux.js",
    "server:optimize": "node scripts/server-optimization.js",
    "quality:assurance": "node scripts/quality-assurance.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3ballnetwork/3-ball-network.git"
  },
  "keywords": [
    "basketball",
    "sports",
    "community",
    "scouting",
    "analytics",
    "pwa",
    "real-time",
    "firebase",
    "charts",
    "dashboard",
    "file-hashing",
    "cache-busting"
  ],
  "author": "3 Ball Network Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/config-array": "^0.21.0",
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-legacy": "^7.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.10.3",
    "babel-jest": "^29.7.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "chrome-launcher": "^1.2.0",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "lighthouse": "^12.7.1",
    "lighthousebot": "^1.0.0",
    "livereload": "^0.9.3",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.1",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
